<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:id="@+id/item_ly">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_gravity="center"
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25px"
        />

    <RelativeLayout
        android:id="@+id/rel_one"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/time_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_below="@+id/meeting_content"
            android:text="会议时间:"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/time_name"
            android:layout_alignBottom="@+id/time_name"
            android:layout_marginLeft="1dp"
            android:text="9:00-11:00"/>
        <TextView
            android:id="@+id/meeting_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:textSize="20dp"
            android:text="参会人员:"/>
        <TextView
            android:id="@+id/people"
            android:text="生产以及软件开发部"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/meeting_people"
            android:layout_alignBottom="@+id/meeting_people"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"


            />
        <TextView
            android:id="@+id/meeting_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议名称:"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="青岛电视台来访"
            android:layout_marginLeft="1dp"
            android:layout_alignTop="@+id/meeting_content"
            android:layout_toEndOf="@+id/meeting_content" />



    </RelativeLayout>

</LinearLayout>

</LinearLayout>
